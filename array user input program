//how to take user input for int_array elemnts and char_array elemnts and store into the index and print the elments


import java.util.Scanner;
public class Array_Ex1 {
public static void main(String[] args) {
		
		Scanner sc=new Scanner(System.in);
        int int_array[]=new int[5];
        char char_array[]=new char[5];
        
        
        System.out.println("Enter the elements of int ");
        
        for (int i=0; i<int_array.length;i++)
        {
       	int_array[i]=sc.nextInt();
       }
        		
       System.out.println("Enter the elements of char");
        
        for (int i=0; i<char_array.length;i++)
        {
        	char_array[i]=sc.next().charAt(0);
        }
        
       // System.out.println(char_array.toString());
        
        for (int i=0; i<int_array.length;i++)
        {
        System.out.println(" the value at "+ i +" index is "  + int_array[i]);
        }
        
        for (int i=0; i<char_array.length;i++)
        {
        System.out.println(" the value at "+ i +" index is "  + char_array[i]);
        }
	}  

}
